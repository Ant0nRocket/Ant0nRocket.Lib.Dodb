<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <PackageProjectUrl>https://github.com/Ant0nRocket/Ant0nRocket.Lib.Dodb</PackageProjectUrl>
    <Copyright>Ant0nRocket</Copyright>
    <Version>1.2</Version>
    <PackageLicenseExpression>Beerware</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Dtos\Payloads\**" />
    <EmbeddedResource Remove="Dtos\Payloads\**" />
    <None Remove="Dtos\Payloads\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Ant0nRocket.Lib.Std20" Version="1.7.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.8" />
  </ItemGroup>

  <Target Name="PostPackNugetDeploy" AfterTargets="Pack" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="nuget.exe add &quot;$(ProjectDir)$(OutputPath)../$(PackageId).$(PackageVersion).nupkg&quot; -source ../../.nuget_local_repo" />
  </Target>

</Project>
